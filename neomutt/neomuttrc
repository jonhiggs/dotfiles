set mbox_type=Maildir
set mbox="~/Mail"
set spoolfile=+INBOX
set folder="~/Mail"
set mask="!^\\.[^.]"
#set mask="^\\.[^.]"
#set mask=".*"
set record=+Sent\ Mail
set postponed=+Drafts
set editor=nvim
set from="jon.higgs@redbubble.com"

set sidebar_visible=no
set sidebar_format = "%B%?F? [%F]?%* %?N?%N/?%S"
set mail_check_stats

# User Accounts
set from = "jon.higgs@redbubble.com"
set realname = "Jon Higgs"
set sendmail = "msmtp -a default"
set sendmail_wait = 0

set sort_aux=reverse-last-date-received
set sort = threads
set sort_re

# headers
ignore *
unignore From Date Subject To Cc
#unignore organization organisation x-mailer: x-newsreader: x-mailing-list:
#unignore posted-to:
hdr_order Date Subject From To Cc

set wrap=80

bind index,pager  g  noop
bind index        !  noop
bind index        d  noop             # delete
bind index        gg first-entry
bind index        G  last-entry
bind index        !  delete-thread

bind pager        k  previous-line
bind pager        j  next-line
bind pager        gg top
bind pager        G  bottom
bind pager        d  half-down
bind pager        u  half-up
bind pager,index  R  group-reply

