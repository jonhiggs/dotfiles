hardstatus alwayslastline
#hardstatus string '%{= mK}%-Lw%{= KW}%50>%n%f* %t%{= mK}%+Lw%< %{= kG}%-=%D %d %M %Y %c:%s%{-}'
#hardstatus string '%{= kG}%-Lw%{= kW}%50> %n%f* %t%{= kG}%+Lw%< %{= kG}%-=%c:%s%{-}'
hardstatus string '%{= kG}%-Lw%{= kW}%50> %n%f* %t%{= kG}%+Lw%< %{= kG}%-=%c:%s%{-}'

# remap the escape key
escape ``

# disable startup message
startup_message off

# turn off the visual bell
vbell off
# start my screens from 1 instead of 0.
bind c screen 1
bind ^c screen 1
bind 0 select 10
screen 1

# remove binding for dangereous/anoying actions
bind ^k
bind k
bind ^x
bind x
bind s
bind ^S
bind q
bind ^Q

# and vim keyboard movement
bind k focus up
bind j focus down
# configure default screens
screen /home/jon/dotfiles/.screen/vim.sh
title "Vim"

screen /bin/bash

