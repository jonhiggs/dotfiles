hardstatus alwayslastline
#hardstatus string '%{= mK}%-Lw%{= KW}%50>%n%f* %t%{= mK}%+Lw%< %{= kG}%-=%D %d %M %Y %c:%s%{-}'
#hardstatus string '%{= kG}%-Lw%{= kW}%50> %n%f* %t%{= kG}%+Lw%< %{= kG}%-=%c:%s%{-}'
hardstatus string '%{= kG}%-Lw%{= kW}%50> %n%f* %t%{= kG}%+Lw%< %{= kG}%-=%c:%s%{-}'

# disable startup message
startup_message off

# start my screens from 1 instead of 0.
bind c screen 1
bind ^c screen 1
bind 0 select 10
screen 1

# remove binding for dangereous/anoying actions
bind ^k
bind k
bind ^x
bind x

# configure default screens
screen /usr/bin/vim --servername SCREEN
title "Vim"

screen /usr/bin/bash

