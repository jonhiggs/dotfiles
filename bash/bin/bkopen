#!/usr/bin/env bash
BRANCH=${1:-$(git rev-parse --abbrev-ref HEAD)}
REPO=$(
  git config --get remote.origin.url \
    | awk '
        {
          sub(/.*github.com:?/, "", $0)
          sub(/\.git$/,"",$0)
          gsub(/_/,"-",$0)
          print $0
        }
      '
)

open "https://buildkite.com/${REPO}/builds?branch=${BRANCH}"
