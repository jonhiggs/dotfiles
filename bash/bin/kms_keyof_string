#!/usr/bin/env bash
key_arn() {
  aws kms decrypt \
    --ciphertext-blob fileb://<(echo $1 | base64 -D) \
    --query KeyId \
    --output text
}

if [[ -t 0 ]]; then
  string=$@
else
  string=$(cat /dev/stdin)
fi

aws kms list-aliases \
  --key-id $(key_arn "${string}") \
  --query 'Aliases[][AliasName]' \
  --output text
