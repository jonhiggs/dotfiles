#!/usr/bin/env bash
FILE=${1:-${PWD}}
PROJECT_DIR=$(project_root ${FILE})

TMUX_WINDOW=9
tmux new-window -t ${TMUX_WINDOW} -n tmux -- bash --noprofile --norc
tmux send-keys -t:${TMUX_WINDOW} C-z "cd ${PROJECT_DIR}; tig status; nvr --remote-send ':GitGutterAll<CR>'; exit" Enter
tmux select-window -t:${TMUX_WINDOW}
