#!/usr/bin/env bash
# USE http://fuckyeahmarkdown.com/ TO GET YOUR MARKDOWN

SAVEDIR="${HOME}/Dropbox/web_archive/"
MARKDOWN="$(cat /dev/stdin)"
HEADING=$(
  echo "${MARKDOWN}" \
    | grep -m1 '^#' \
    | sed -E 's/^[\#\ ]+//'
)
SLUG=$(
  echo "${HEADING}"           \
    | tr [:upper:] [:lower:]  \
    | sed 's/[^a-z0-9]/-/g'    \
    | sed -E 's/-+/-/g'
)
FILENAME=$(date +%Y%m%d)-${SLUG}.md

echo "${MARKDOWN}" > ${SAVEDIR}/${FILENAME}
