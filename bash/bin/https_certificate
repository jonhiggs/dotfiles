#!/usr/bin/env bash
function _help() {
  echo "$0 <hostname>" >&2
}

[[ $# -ne 1 ]] && _help && exit 1
server_name=$1

echo \
  | openssl s_client \
      -showcerts \
      -servername ${server_name} \
      -connect ${server_name}:443 \
      2>/dev/null \
  | openssl x509 \
      -inform pem \
      -noout \
      -text
