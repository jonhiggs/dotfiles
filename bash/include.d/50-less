export LESS="-R"

_lessc() {
  cmd=$(\find /usr/local/Cellar/source-highlight -name src-hilite-lesspipe.sh | tail -n1)
  ${cmd} $1 | less
}

alias lessc="_lessc"

for cmd in /usr/bin/lesspipe /usr/local/bin/lesspipe.sh; do
  [[ -x ${cmd} ]] || continue
  eval "$(SHELL=/bin/sh ${cmd})"
done

# vim: ft=sh
