export LESS="-R"

_lessc() {
  tmux resize-pane -Z
  /usr/local/Cellar/source-highlight/3.1.8_10/bin/src-hilite-lesspipe.sh $1 | less
  tmux resize-pane -Z
}

alias l="_lessc"

for cmd in /usr/bin/lesspipe /usr/local/bin/lesspipe.sh; do
  [[ -x ${cmd} ]] || continue
  eval "$(SHELL=/bin/sh ${cmd})"
done

# vim: ft=sh
