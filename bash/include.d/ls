case `uname` in
  "Darwin")
    which gls &> /dev/null \
      && alias ls="gls --color=auto"
    ;;
  *)
    alias ls="ls --color=auto"
    ;;
esac

# http://geoff.greer.fm/lscolors/
export LSCOLORS="exgxbxdxcxegedabagacad"  # BSD
export LS_COLORS="di=34:ln=36:so=31:pi=33:ex=32:bd=34;46:cd=34;43:su=30;41:sg=30;46:tw=30;42:ow=30;43" # GNU

# vim: ft=sh
