if [[ "$(uname)" == "Darwin" ]]; then
  alias dnsdomainname='domainname'
  alias lock='pmset displaysleepnow'
  alias lcok='lock'
  alias power="pmset -g batt"
  alias tsb="tmux save-buffer - | pbcopy"  # XXX tmux doesn't save the buffer to the system clipboard in Alacritty. This is a temporary work-around.

  alias imageoptim='/Applications/ImageOptim.app/Contents/MacOS/ImageOptim'

  # DARWIN GNU COREUTILS
  if brew list | grep coreutils &> /dev/null; then
    alias cat="gcat"
    alias cp="gcp"
    alias cut="gcut"
    alias date="gdate"
    alias echo="gecho"
    alias gnice="ggnice"
    alias groups="ggroups"
    alias head="ghead"
    alias ln="gln"
    alias ls="gls --color=auto"
    alias mkdir="gmkdir"
    alias mktemp="gmktemp"
    alias readlink="greadlink"
    alias sdate='gdate --rfc-3339=date'
    #alias sed="gsed"
    alias sleep="gsleep"
    alias sort="gsort"
    alias split="gsplit"
    alias stat="gstat"
    alias tail="gtail"
    alias tac="gtac"
    alias tee="gtee"
    alias touch="gtouch"
    alias uname="guname"
    alias uniq="guniq"
    alias uptime="guptime"
  fi
  alias umount="diskutil umount"
fi

# vim: ft=sh
